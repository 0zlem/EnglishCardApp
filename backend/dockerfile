# 1. Build aşaması
FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src

# .csproj dosyalarını kopyala ve restore et
COPY ["src/EnglishCardApp.WebAPI/EnglishCardApp.WebAPI.csproj", "EnglishCardApp.WebAPI/"]
COPY ["src/EnglishCardApp.Application/EnglishCardApp.Application.csproj", "EnglishCardApp.Application/"]
COPY ["src/EnglishCardApp.Domain/EnglishCardApp.Domain.csproj", "EnglishCardApp.Domain/"]
COPY ["src/EnglishCardApp.Infrastructure/EnglishCardApp.Infrastructure.csproj", "EnglishCardApp.Infrastructure/"]

RUN dotnet restore "EnglishCardApp.WebAPI/EnglishCardApp.WebAPI.csproj"

# Tüm kaynak kodunu kopyala
COPY src/ .

# Build ve publish
WORKDIR /src/EnglishCardApp.WebAPI
RUN dotnet publish -c Release -o /app/publish

# 2. Runtime aşaması
FROM mcr.microsoft.com/dotnet/aspnet:9.0
WORKDIR /app
COPY --from=build /app/publish .
ENTRYPOINT ["dotnet", "EnglishCardApp.WebAPI.dll"]
